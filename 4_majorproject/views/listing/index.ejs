<% layout("/layout/boilerplate") %>
<body>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listing/new">
        <button>Create New</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listings of allListing) { %>
            <a href="/listing/<%= listings._id %>" class="listing-link">
            <div class="card col">
                <img src="<%= listings.image %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listings.title %></b> <br>
                    &#2547; <%= listings.price.toLocaleString("en-BD") %> / night
                  </p>
                </div>
              </div>
            </a>
              <% } %>
    </div>
</body>


