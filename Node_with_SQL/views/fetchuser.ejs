<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>user</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Create user</h1>
    <form method="get" action="/users/new">
        <button>Add new user</button>
    </form>
    <table class="styled-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Email</th>
                <th>Edit User</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% for(user of users){ %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td>
                        <form method="get" action="/users/<%= user.id %>/edit">
                            <button>edit</button>
                        </form>
                    </td>
                    <td>
                        <form action="/users/<%= user.id %>/delete" method="get">
                            <button>delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
